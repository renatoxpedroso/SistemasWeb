                        <!-- general form elements -->
                        <div class="box box-primary">
                            <!-- /.box-header -->
                            <!-- form start -->
                            <form class="form" method="post" action="/CadastroUsuarios/Gravar">
                                <div style="margin-left:50px;" class="box-body">

                                    <div class="form-group">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">Cadastro de Ação</h3>
                                        </div>

                                        <label for="status">Status</label>

                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="radio" name="status" id="status" value="1"> Ativa
                                            </label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="radio" name="status" id="status" value="2"> Inativa
                                            </label>
                                        </div>
                                    </div>


                                    <div class="form-group row">
                                        <label for="descricao" class="col-sm-2 col-form-label">Descrição da Ação</label>
                                        <div class="col-sm-5 rows ">
                                            <!--<input type="text" required="required" class="form-control" name="descricao" id="descricao" placeholder="Descrição">-->
                                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="datainicio" class="col-lg-2 col-form-label">Data de Inicio</label>

                                        <div class="col-sm-3">
                                            <input type="date" class="form-control pull-right form-group-lg" data-val-required="Inserir a data de inicio." nome="datinicio" id="datinicio" placeholder="Data de Inicio">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="datafim" class="col-lg-2 col-form-label">Data de Fim</label>

                                        <div class="col-sm-3">
                                            <input type="date" class="form-control pull-right form-group-lg datepicker" data-val="true" data-val-required="Inserir a data de fim." nome="datfim" id="datfim" placeholder="Data de Fim">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="tipoacao" class="col-lg-2 col-form-label">Tipo da Ação</label>

                                        <div class="col-sm-4">
                                            <select class="form-control" name="tipoacao" id="tipoacao">
                                                <option>Pintar Igreja</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="btn-group row">
                                        <button type="button" class="btn btn-primary">Limpar</button>
                                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                                    </div>


                                </div>

                            </form>
                        </div>
